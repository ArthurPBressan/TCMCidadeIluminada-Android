<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="64dp"
        android:id="@+id/previewItemProtocolo"
        android:src="@drawable/camera_botao"
        android:focusableInTouchMode="false"
        android:layout_weight="2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/numeroItemProtocolo"
        android:layout_weight="4" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/descricaoItemProtocolo"
        android:layout_weight="6" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/statusItemProtocolo"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abrirDetalhesProtocolo"
        android:src="@drawable/ic_action_next_item"
        android:layout_weight="1" />
</LinearLayout>